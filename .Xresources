! Change DPI, 1366x768 18.5 = 85
Xft.dpi: 85

! Set cursor theme
Xcursor.theme: Bibata-Modern-Ice

! Set cursor size
Xcursor.size: 24

! Font antialias
Xft.antialias: 1

! Font hinting
Xft.hinting: 1
Xft.hintstyle: hintslight

! Font RGBA
Xft.rgba: rgb
