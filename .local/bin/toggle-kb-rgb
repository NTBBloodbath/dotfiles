#!/usr/bin/env sh
#
# Keyboard RGB toggler, meant to be used on my AwesomeWM rice with a keybind
# NOTE: this is because AwesomeWM doesn't work well with Scroll Lock key

if [[ ! -f "/tmp/kb_rgb_enabled" ]]; then
    # Enable RGB
    distrobox-enter --name env -- 'xset led named "Scroll Lock"'
    touch /tmp/kb_rgb_enabled
else
    # Disable RGB
    distrobox-enter --name env -- 'xset -led named "Scroll Lock"'
    rm /tmp/kb_rgb_enabled
fi
