###------------------------------------
##   Behavior
#--------------------------------------
# title = Ghostty

confirm-close-surface = false

mouse-hide-while-typing = true

copy-on-select = false

shell-integration-features = no-cursor,sudo

###------------------------------------
##   Keybindings
#--------------------------------------
keybind = super+shift+w=reload_config

# Split creation
keybind = alt+v=new_split:right
keybind = alt+s=new_split:down

# Split navigation
keybind = ctrl+tab=goto_split:next
keybind = ctrl+shift+tab=goto_split:previous

# Split sizing
keybind = ctrl+left=resize_split:left,20
keybind = ctrl+right=resize_split:right,20
keybind = ctrl+up=resize_split:up,20
keybind = ctrl+down=resize_split:down,20
keybind = ctrl+shift+equal=equalize_splits

